    "url": "https://github.com/ngerritsen/dagboek/issues"
  },
  "homepage": "https://github.com/ngerritsen/dagboek#readme",
  "dependencies": {
    "ejs": "^3.1.3",
    "moment": "^2.27.0",
    "showdown": "^1.9.1"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "http-server": "^0.12.3",
    "watchlist": "^0.2.3"
  }
}
